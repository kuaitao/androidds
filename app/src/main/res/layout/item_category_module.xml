<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <com.bashapplication.view.GeneralCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:id="@+id/rly_root"
            android:layout_width="168dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_white_cor20"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/c222222_14" />

            <TextView
                android:id="@+id/tv_detail"
                style="@style/c666666_12"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="16dp"
                android:layout_height="9dp"
                android:layout_below="@+id/tv_detail"
                android:background="@drawable/shap_cff5034_cor10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_scan" />

            </RelativeLayout>

            <com.gcssloop.widget.RCImageView
                android:id="@+id/iv_pic"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                app:round_corner="5dp" />

        </RelativeLayout>
    </com.bashapplication.view.GeneralCardView>
</LinearLayout>